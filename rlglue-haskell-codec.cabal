  build-depends:       base >=4.7 && <4.8, network-simple, transformers, exceptions, binary, bytestring,
                       data-binary-ieee754
  other-modules:       RLNetwork, RLExperiment
  hs-source-dirs:      src
  default-language:    Haskell2010

executable skeleton-environment
  Main-is:             SkeletonEnvironment.hs
  build-depends:       base >=4.7 && <4.8, network-simple, transformers, exceptions, binary, bytestring,
                       data-binary-ieee754
  other-modules:       RLNetwork, RLEnvironment
  hs-source-dirs:      src
  default-language:    Haskell2010

executable skeleton-agent
  Main-is:             SkeletonAgent.hs
  build-depends:       base >=4.7 && <4.8, network-simple, transformers, exceptions, binary, bytestring,
                       data-binary-ieee754, random
  other-modules:       RLNetwork, RLAgent
  hs-source-dirs:      src
  default-language:    Haskell2010
