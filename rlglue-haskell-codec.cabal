library
  exposed-modules:     RLNetwork, RLExperiment, RLEnvironment, RLAgent, RLTaskSpec
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8, network-simple, transformers, exceptions, binary, bytestring,
                       data-binary-ieee754, parsec
  hs-source-dirs:      src
  default-language:    Haskell2010

executable skeleton-experiment
